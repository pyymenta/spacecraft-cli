{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
