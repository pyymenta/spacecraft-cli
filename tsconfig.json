{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",

        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
